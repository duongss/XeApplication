<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/vpData"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/lnGroupOption"
        android:layout_width="match_parent"
        android:layout_height="0dp" />

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/lnGroupOption"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@drawable/bg_rounder_top_1"
        app:layout_constraintBottom_toBottomOf="parent">

        <FrameLayout
            android:id="@+id/btnBack"
            android:background="?selectableItemBackground"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_gravity="center"
                android:layout_width="32dp"
                android:layout_height="32dp"
                app:srcCompat="@drawable/ac_arrow_left" />
        </FrameLayout>

        <FrameLayout
            android:id="@+id/btnForward"
            android:background="?selectableItemBackground"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_gravity="center"
                android:layout_width="32dp"
                android:layout_height="32dp"
                app:srcCompat="@drawable/ac_arrow_right" />
        </FrameLayout>

        <FrameLayout
            android:background="?selectableItemBackground"
            android:id="@+id/btnClose"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_gravity="center"
                android:layout_width="32dp"
                android:layout_height="32dp"
                app:srcCompat="@drawable/ic_close" />
        </FrameLayout>


    </androidx.appcompat.widget.LinearLayoutCompat>
</androidx.constraintlayout.widget.ConstraintLayout>